<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/page_dimens"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_continent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_continent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginHorizontal="@dimen/page_dimens"
        android:id="@+id/tv_name"
        android:textSize="24sp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toEndOf="@+id/iv_continent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Africa" />

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_marginHorizontal="@dimen/page_dimens"
        android:textSize="24sp"
        android:id="@+id/tv_content_city"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toEndOf="@+id/iv_continent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="Africa" />

</androidx.constraintlayout.widget.ConstraintLayout>